# Install dependencies
install:
    npm install

# Run the development server
start:
    npm run dev

# Build the project for production
build:
    npm run build

# Run tests
test:
    npm run test

# Clean the project (if needed)
clean:
    rm -rf node_modules
    rm -rf dist

# Check for code issues (lint)
lint:
    npm run lint
		
default: start